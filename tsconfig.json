{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "./dist/out-tsc",
    "resolveJsonModule": true,
    "paths": {
      "@thing/messages": ["./libs/messages/index.ts"],
      "@thing/ui": ["./libs/ui/index.ts"],
      "@thing/utils": ["./libs/utils/index.ts"],
      "@thing/store": ["./libs/store/index.ts"],
      "@thing/worker": ["./libs/worker/index.ts"],
      "@thing/data": ["./libs/data/index.ts"]
    },
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2015",
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["./node_modules", "./tmp", "./apps/frontend-e2e/**"],
  "references": [
    {
      "path": "./apps/frontend-e2e"
    }
  ]
}
